/* index wxss */
.time-component {
  margin-top: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.placeholder {
  margin: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  height: 2.3em;
  line-height: 2.3em;
}

.icon {
  line-height: auto;
  width: 40rpx;
}

.icon image {
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

.hd {
  text-align: center;
  width: 120rpx;
  margin-left: -20rpx;
  font-size: 28rpx;
}

.date {
  position: absolute;
  right: 120rpx;
  width: 140px;
}

.line {
  z-index: 10;
  position: absolute;
  right: 100rpx;
  width: 10rpx;
}

.time {
  position: absolute;
  right: 0;
  font-size: 28rpx;
}
